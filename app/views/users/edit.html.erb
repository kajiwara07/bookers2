<div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
<h2>Use info<h2/>
<%= form_with model: @user do |f| %>
<label for ="inputName">Name</label> 
<%= f.text_field :name, autofocus: true, id:"inputName", placeholder: "名前" %>
<label for ="inputImage">ProfileImage</label>
<%= f.field :profile_image, placeholder: "Image", accept: "image/*" %>
<label for ="inputIntroduction">
<%= f.text_area_field :user_introduction, id:"user_introduction", placeholder:introduction %>

<%= f.submit "Update User"%>
<% end %>
