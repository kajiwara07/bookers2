<div class="container px-5 px-sm-0">
  
<div class="row">
<%= render 'books/side', books: @books, users: @users %>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
    <table class="table table-hover table-inverse">
      <tbody>
          <tr>
            <td><%= image_tag @book.user.get_profile_image(50, 50) %><br>
            <%= link_to @book.user.name, user_path(@book.user) %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user_id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success"%></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
      </tbody>
    </table>
</div>
</div>
</div>
