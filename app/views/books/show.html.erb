<%= flash[:notice] %>
<%= render 'books/side', books: @books, users: @users %>
<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <div class="table">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
            <td><%= link_to book.user.name, user_path(book.user) %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <% if book.user_id == current_user.id %>
              <td><%= link_to "edit", edit_book_path(book) %></td>
              <td><%= link_to "destroy", book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
