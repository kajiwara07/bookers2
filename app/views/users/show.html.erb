<div class="container px-5 px-sm-0">
 <%= flash[:notice] %>
 <div class="row">
<%= render 'books/side', books: @books, users: @users %>
<!-- User's Books -->
<div class="col-md-9">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(@user) do %>
            <%= image_tag @user.get_profile_image(50, 50) %>
            <% end %>
            </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>