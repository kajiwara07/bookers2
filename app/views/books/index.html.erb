 <h2>User info</h2>
 <%= render 'books/side', book: @books %>
 
 <!-- 本のリストの表示 -->
<h2>Books</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>